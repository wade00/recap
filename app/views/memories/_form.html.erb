<%= form_for :memories, url: { :action => 'create' } do |f| %>
  <% if @memory.errors.any? %>
    <%= render "shared/errors", resource: @memory %>
  <% end %>

  <div class="form-group">
    <%= f.label :image, "Snap a picture", class: "control-label" %>
    <%= f.file_field :image, class: "form-control", value: @memory.image %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label" %>
    <%= f.text_area :description, class: "form-control", value: @memory.description %>
  </div>

  <%= f.hidden_field :event_id, value: @event.id %>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <%= render "shared/errors", resource: @event %>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :reminder_interval %><br>
    <%= f.number_field :reminder_interval %> reminders
  </div>
  <div class="field">
    <%= f.label :recap_alert_time %><br>
    <%= f.datetime_select :recap_alert_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
